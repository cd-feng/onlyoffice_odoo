<?xml version="1.0"?>
<odoo>
    <record id="module_category_onlyoffice_template" model="ir.module.category">
        <field name="name">ONLYOFFICE Template</field>
        <field name="sequence">30</field>
    </record>
    
    <!-- User role with read-only access -->
    <record id="group_onlyoffice_template_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="module_category_onlyoffice_template"/>
    </record>

    <!-- Administrator role with full access -->
    <record id="group_onlyoffice_template_admin" model="res.groups">
        <field name="name">Administrator</field>
        <field name="category_id" ref="module_category_onlyoffice_template"/>
        <field name="implied_ids" eval="[(4, ref('group_onlyoffice_template_user'))]"/>
    </record>
    
    <!-- Access control rules -->
    <record id="access_onlyoffice_template_user" model="ir.model.access">
        <field name="name">User Access</field>
        <field name="model_id" ref="onlyoffice_template.model_onlyoffice_template"/>
        <field name="group_id" ref="group_onlyoffice_template_user"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="0"/>
        <field name="perm_create" eval="0"/>
        <field name="perm_unlink" eval="0"/>
    </record>
    
    <record id="access_onlyoffice_template_admin" model="ir.model.access">
        <field name="name">Administrator Access</field>
        <field name="model_id" ref="onlyoffice_template.model_onlyoffice_template"/>
        <field name="group_id" ref="group_onlyoffice_template_admin"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="1"/>
    </record>
</odoo>